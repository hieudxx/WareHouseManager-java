<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".Fragment.FragStaff.ActivityStaffUpdate">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_list"
        android:orientation="vertical">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar_update_staff"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@color/secondaryLightColor"
            android:fitsSystemWindows="true"
            android:gravity="center"
            android:minHeight="?attr/actionBarSize"
            app:navigationIcon="@drawable/ic_back" />

        <!--        Tên nhân viên-->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="25dp"
                android:fontFamily="@font/roboto"
                android:text="Tên nhân viên"
                android:textAllCaps="true"
                android:textColor="@color/black"
                android:textSize="15sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" *"
                android:textColor="#FF0000"
                android:textSize="20sp" />
        </LinearLayout>

        <EditText
            android:id="@+id/ed_name_updatenv"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="22dp" />

        <!--        Tên tài khoản-->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:fontFamily="@font/roboto"
                android:text="Tên tài khoản"
                android:textAllCaps="true"
                android:textColor="@color/black"
                android:textSize="15sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" *"
                android:textColor="#FF0000"
                android:textSize="20dp" />
        </LinearLayout>

        <EditText
            android:id="@+id/ed_username_updatenv"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="22dp" />

        <!--        Mật khẩu-->


        <!--        Số điện thoại-->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="15dp"
            android:fontFamily="@font/roboto"
            android:text="Số điện thoại"
            android:textAllCaps="true"
            android:textColor="@color/black"
            android:textSize="15sp" />

        <EditText
            android:id="@+id/ed_sdt_updatenv"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="22dp" />

        <!--        Vị trí-->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:fontFamily="@font/roboto"
                android:text="Vị trí"
                android:textAllCaps="true"
                android:textColor="@color/black"
                android:textSize="15sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" *"
                android:textColor="#FF0000"
                android:textSize="20dp" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center">

            <EditText
                android:id="@+id/ed_position_update"
                android:layout_width="350dp"
                android:layout_height="wrap_content" />

            <ImageView
                android:id="@+id/dropdown_position_update"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_drop_down_24" />

        </RelativeLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"

            android:layout_height="100dp">

            <Button
                android:id="@+id/btn_updateImgAvatar"
                android:layout_width="180dp"
                android:layout_height="44dp"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="25dp"
                app:icon="@drawable/ic_img"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton.Icon"
                android:text="Cập nhật ảnh"
                android:backgroundTint="@color/white"
                />
            <ImageView
                android:id="@+id/img_update_avt"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginLeft="60dp"
                android:layout_marginTop="10dp"
                />
        </LinearLayout>

        <!--        Nút bấm xác nhận-->
        <Button
            android:id="@+id/btn_update_nv"
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginTop="100dp"
            android:fontFamily="@font/roboto"
            android:text="Cập nhật"
            android:textStyle="bold" />
    </LinearLayout>
</layout>