<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Fragment.FragStaff.FragNVThem">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_list"
        android:orientation="vertical">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:background="#d1d1d1"
            android:layout_height="100dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center">
            <Button
                android:id="@+id/btn_addImgAvatar"
                android:layout_width="160dp"
                android:layout_height="44dp"
                android:layout_marginLeft="10dp"
                app:icon="@drawable/ic_img"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton.Icon"
                android:text="Tải ảnh lên"
                android:backgroundTint="@color/white"
                />
            <Button
                android:id="@+id/btn_captureImgAvatar"
                android:layout_width="160dp"
                android:layout_height="44dp"
                android:layout_marginLeft="10dp"
                app:icon="@drawable/imga"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton.Icon"
                android:text="Chụp ảnh"
                android:backgroundTint="@color/white"
                />
            </LinearLayout>
            <ImageView
                android:id="@+id/img_add_avt"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginLeft="60dp"
                android:layout_marginTop="10dp"
               />
        </LinearLayout>

        <!--        Tên nhân viên-->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="25dp"
                android:fontFamily="@font/roboto"
                android:text="Tên nhân viên"
                android:textAllCaps="true"
                android:textColor="@color/black"
                android:textSize="15sp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" *"
                android:textSize="20sp"
                android:textColor="#FF0000"/>
        </LinearLayout>
        <EditText
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="22dp"
            android:id="@+id/ed_name_fragthemnv"/>

<!--        Tên tài khoản-->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="15dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:fontFamily="@font/roboto"
                android:text="Tên tài khoản"
                android:textAllCaps="true"
                android:textColor="@color/black"
                android:textSize="15sp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" *"
                android:textSize="20dp"
                android:textColor="#FF0000"/>
        </LinearLayout>

        <EditText
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="22dp"
            android:id="@+id/ed_username_fragthemnv"/>

<!--        Mật khẩu-->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="15dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:fontFamily="@font/roboto"
                android:text="Mật khẩu"
                android:textAllCaps="true"
                android:textColor="@color/black"
                android:textSize="15sp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" *"
                android:textSize="20dp"
                android:textColor="#FF0000"/>
        </LinearLayout>
        <EditText
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="22dp"
            android:id="@+id/ed_password_fragthemnv"/>

<!--        Số điện thoại-->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="25dp"
                android:fontFamily="@font/roboto"
                android:text="Số điện thoại"
                android:textAllCaps="true"
                android:textColor="@color/black"
                android:textSize="15sp" />
        <EditText
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="22dp"
            android:id="@+id/ed_sdt_fragthemnv"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:fontFamily="@font/roboto"
                android:text="Vị trí"
                android:textAllCaps="true"
                android:textColor="@color/black"
                android:textSize="15sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" *"
                android:textColor="#FF0000"
                android:textSize="20dp" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="350dp"
            android:layout_marginLeft="22dp"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/ed_position"
                android:layout_width="350dp"
                android:layout_height="wrap_content" />

            <ImageView
                android:id="@+id/dropdown_position"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_drop_down_24"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true" />

        </RelativeLayout>

        <!--        Nút bấm xác nhận-->
        <Button
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:text="xác nhận"
            android:textStyle="bold"
            android:fontFamily="@font/roboto"
            android:id="@+id/btn_xacnhan_nv"
            android:textColor="@color/black"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"/>
    </LinearLayout>
</layout>