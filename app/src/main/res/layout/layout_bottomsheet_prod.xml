<?xml version="1.0" encoding="utf-8"?>
<layout>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:padding="16dp"
    android:layout_height="wrap_content">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Chi tiết sản phẩm"
        android:textColor="@color/black"
        android:fontFamily="@font/roboto"
        android:textStyle="bold"
        android:textSize="18dp"/>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_marginTop="16dp"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tvnamesp"
            android:text="Tên sản phẩm:"
            android:layout_width="200dp"
            android:textSize="15dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_toStartOf="@+id/tv_name_prod"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tv_name_prod"
            android:text="Bánh gạo"
            android:layout_width="250dp"
            android:textSize="15dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_height="wrap_content"/>
    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_marginTop="5dp"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tvlocationsp"
            android:text="Vị trí:"
            android:layout_width="200dp"
            android:textSize="15dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_toStartOf="@+id/tv_location_prod"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tv_location_prod"
            android:text="Kho A"
            android:layout_width="250dp"
            android:textSize="15dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_height="wrap_content"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_marginTop="5dp"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tvpricesp"
            android:text="Giá bán:"
            android:layout_width="200dp"
            android:textSize="15dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_toStartOf="@+id/tv_price_prod"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tv_price_prod"
            android:text="15000 VND"
            android:layout_width="250dp"
            android:textSize="15dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_height="wrap_content"/>
    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_marginTop="5dp"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tvcostpricesp"
            android:text="Giá vốn:"
            android:layout_width="200dp"
            android:textSize="15dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_toStartOf="@+id/tv_costprice_prod"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tv_costprice_prod"
            android:text="8000 VND"
            android:layout_width="250dp"
            android:textSize="15dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_height="wrap_content"/>
    </RelativeLayout>


    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnXoa_prod"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:text="Xóa"
            android:layout_marginEnd="15dp"
            android:textColor="#E53935"/>

        <Button
            android:id="@+id/btnCapNhat_prod"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:text="Cập Nhật"
            android:textColor="@color/black"/>
    </LinearLayout>
</LinearLayout>
</layout>